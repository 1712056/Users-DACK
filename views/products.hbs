<div class="products-gallery">
    
    <div class="container">
        
        <div class="col-md-9 grid-gallery">
            {{#each product}}
            <div class="col-md-4 grid-stn simpleCart_shelfItem">
                <!-- normal -->
                <div class="ih-item square effect3 bottom_to_top">
                    <div class="bottom-2-top">
                        <div class="img"><img src={{this.Hinh}} alt="/" class="img-responsive gri-wid"></div>
                        <div class="info">
                            <div class="pull-left styl-hdn">
                                <h3>{{this.Ten}}</h3>
                            </div>
                            <div class="pull-right styl-price">
                                <p><a href="#" class="item_add"><span
                                            class="glyphicon glyphicon-shopping-cart grid-cart"
                                            aria-hidden="true"></span> <span class=" item_price">{{this.Gia}}</span></a>
                                </p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
                <!-- end normal -->
                <div class="quick-view">
                    <a href="chitiet{{this.Gioitinh}}">Chi tiết</a>
                </div>
            </div>
            {{/each}}
            <div class="clearfix"></div>
        </div>
        <div class="col-md-3 grid-details">
            
            <div class="grid-addon">
                <section class="sky-form">
                    <h4><span class="glyphicon glyphicon-minus" aria-hidden="true"></span>Thương hiệu</h4>
                    <div class="row row1 scroll-pane">
                        {{#each countBrand}}
                        <div class="col col-4">
                            <a href="">{{this.Brand}} ({{this.soluong}})</a>
                            </br>
                        </div>
                        {{/each}}
                    </div>
                </section>
                <section class="sky-form">
                    <h4><span class="glyphicon glyphicon-minus" aria-hidden="true"></span>Thể loại</h4>
                    <div class="row row1 scroll-pane">
                        {{#each countType}}
                        <div class="col col-4">
                            <a href="/sanpham">{{this.Loai}} ({{this.sl}})</a>
                            </br>
                        </div>
                        {{/each}}
                    </div>
                </section>
            </div>
            
        </div>
         
        <div class="clearfix"></div>
       
    </div>
    
</div>